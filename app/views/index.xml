<Alloy>
	<Window class="container">	
		<View id="menuView">
			<View id="menuNavView">
				<ImageView image="images/icons/casa.png" width="22" height="22" left="10" top="12"></ImageView>
				<Label class="title" left="5" top="5">Menu</Label>
			</View>
			<View height="20" width="100%" backgroundColor="#6a6967" layout="horizontal">
				<ImageView image="images/icons/oculos.png" height="10" top="5" width="22" left="10"></ImageView>
				<Label class="labelfixed">SERVIÇOS DE CONSULTORIA</Label>		
			</View>
			<ScrollView id="menuContentView" layout="vertical" scrollingEnabled="true">
				<View class="menuItem" onClick="clickMenu" id="consultoriafinanceira" subheight="80" onTouchstart="touchStart">
					<Label left="10">Financeira</Label>
					<ImageView class="imgExpand" id="img" visible="false" image="images/icons/expand.png"></ImageView>	
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" subView='sub_mkt' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Marketing</Label>
					<ImageView class="imgExpand" id="img" image="images/icons/expand.png"></ImageView>
				</View>
				<View class="subMenu" height="0" id="sub_mkt">						
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" sub="false" id="planomkt" swipe="false">
						<Label class="subLabel">Plano de Marketing</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" sub="false" id="pesquisamkt">
						<Label class="subLabel">Pesquisa de Mercado</Label>	
					</View>	
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" sub="false" id="estudomkt" layout="horizontal">
						<Label class="subLabel">Estudo de Viabilidade</Label><Label class="littleLabel"> (mercadológico e financeiro)</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" sub="false" id="negociosmkt">
						<Label class="subLabel">Plano de Negócios</Label>	
					</View>	
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" id="organizacional" subheight="80" onTouchstart="touchStart">
					<Label left="10">Organizacional</Label>			
					<ImageView class="imgExpand" id="img" visible="false" image="images/icons/expand.png"></ImageView>	
				</View>
								
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" id="sobre" onTouchstart="touchStart">
					<ImageView image="images/icons/sobre.png" left="10" width="21" height="20" top="10"></ImageView>
					<Label>Sobre a Empresa Jr.</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" id="sac" restrito="true" onTouchstart="touchStart">
					<ImageView image="images/icons/SAC.png" left="10" width="16" height="20" top="10"></ImageView>
					<Label>SAC</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" id="mapa" onTouchstart="touchStart">
					<ImageView image="images/icons/mapa.png" left="10" width="15" height="20" top="10"></ImageView>
					<Label>Mapa de Localização</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" id="faleconosco" onTouchstart="touchStart">
					<ImageView image="images/icons/faleconosco.png" left="9" width="23" height="20" top="10"></ImageView>
					<Label>Fale Conosco</Label>
				</View>

				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				
			</ScrollView>
		</View>
		<View id="main" backgroundColor="#FFF"/>
	</Window>
</Alloy>