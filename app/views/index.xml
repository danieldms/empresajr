<Alloy>
	<Window class="container">	
		<View id="menuView">
			<View id="menuNavView">
				<View platform="ios" height="10dp"></View>
				<ImageView image="/images/icons/casa.png" width="22dp" height="22dp" left="10" top="13dp" class="iconMenu"></ImageView>
				<Label class="title" left="5" top="5">Menu</Label>
			</View>
			<View height="20" width="100%" backgroundColor="#6a6967" layout="horizontal">
				<ImageView image="/images/icons/oculos.png" height="10" top="5" width="22" left="10"></ImageView>
				<Label class="labelfixed">SERVIÇOS DE CONSULTORIA</Label>		
			</View>
			<ScrollView id="menuContentView" layout="vertical" scrollingEnabled="true">
				<View class="menuItem" onClick="clickMenu" subView='sub_fin' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Financeira</Label>
					<ImageView class="imgExpand" id="img" image="/images/icons/expand.png"></ImageView>	
				</View>
				<View class="subMenu" height="0" id="sub_fin" expand="80">						
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="financeira/estrutura">
						<Label class="subLabel">Estruturação Financeira</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="financeira/analise">
						<Label class="subLabel">Análise Financeira</Label>	
					</View>	
					
				</View>
						
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" subView='sub_mkt' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Marketing</Label>
					<ImageView class="imgExpand"  id="img" image="/images/icons/expand.png"></ImageView>
				</View>
				<View class="subMenu" height="0" id="sub_mkt" expand="80">						
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="marketing/plano">
						<Label class="subLabel">Plano de Marketing</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="marketing/pesquisa">
						<Label class="subLabel">Pesquisa de Mercado</Label>	
					</View>	
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" subView='sub_org' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Organizacional</Label>			
					<ImageView class="imgExpand" id="img" image="/images/icons/expand.png"></ImageView>	
				</View>				
				<View class="subMenu" height="0" id="sub_org" expand="80">						
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="organizacional/estrutura">
						<Label class="subLabel">Estrutura Organizacional</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="organizacional/padronizacao">
						<Label class="subLabel">Padronização de Processos</Label>	
					</View>	
				</View>

				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" subView='sub_gestao' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Gestão de Pessoas</Label>			
					<ImageView class="imgExpand" id="img" image="/images/icons/expand.png"></ImageView>	
				</View>				
				<View class="subMenu" height="0" id='sub_gestao' expand="80">						
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="gestao/desempenho">
						<Label class="subLabel">Avaliação de Desempenho</Label>	
					</View>		
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="gestao/pesquisa">
						<Label class="subLabel">Pesquisa de Clima Organizacional</Label>	
					</View>	
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" subView='sub_abrir' onTouchstart="touchStart" onTouchend="touchEnd">
					<Label left="10">Quer abrir seu negócio</Label>			
					<ImageView class="imgExpand" id="img" image="/images/icons/expand.png"></ImageView>	
				</View>				
				<View class="subMenu" height="0" id='sub_abrir' expand="80">						
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="negocio/plano">
						<Label class="subLabel">Plano de negócios</Label>	
					</View>	
					
					<View height="1" backgroundColor="#b1b0ac" width="100%" />		
					<View class="menuItem" onClick="clickMenu" source="negocio/estudo">
						<Label class="subLabel">Estudo de Viabilidade</Label>	
					</View>	
				</View>		
								
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" onTouchstart="touchStart" source="sobre">
					<ImageView image="/images/icons/sobre.png" left="10" width="21" height="20" top="10"></ImageView>
					<Label>Sobre a Empresa Jr.</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" restrito="true" onTouchstart="touchStart" source="sac">
					<ImageView image="/images/icons/SAC.png" left="10" width="16" height="20" top="10"></ImageView>
					<Label>SAC</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" onTouchstart="touchStart" source="mapa">
					<ImageView image="/images/icons/mapa.png" left="10" width="15" height="20" top="10"></ImageView>
					<Label>Mapa de Localização</Label>
				</View>
				
				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />		
				<View class="menuItem" onClick="clickMenu" onTouchstart="touchStart" source="faleconosco">
					<ImageView image="/images/icons/faleconosco.png" left="9" width="23" height="20" top="10"></ImageView>
					<Label>Fale Conosco</Label>
				</View>

				<View height="1" backgroundColor="#141414" width="100%" />		
				<View height="1" backgroundColor="#303030" width="100%" />					
			</ScrollView>
		</View>
		<View id="main" backgroundColor="#FFF"/>
		<View id="wait" width="100%" height="100%" backgroundColor="transparent" left="0" top="0" zIndex="10" visible="false">
			<View width="200dp" height="100dp">
				<View borderRadius="10dp" opacity="0.7" backgroundColor="#000" borderColor="#fff" borderWidth="1dp"></View>
				<ActivityIndicator id="activityIndicator" top="20dp" indicatorColor="#FFF" />
				<Label color="white" font="{fontSize: '22dp'}" top="65dp" left="60dp">Carregando...</Label>
			</View>
		</View>

	</Window>
</Alloy>