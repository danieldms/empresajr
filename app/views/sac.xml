<Alloy>
	<View layout="vertical">
		<View id="navView">
			<View id="button"></View>
			<Label class="title">SAC</Label>		
		</View>
		<ScrollView class="contentView" id="content" scrollingEnabled="true" contentHeight="auto">
			<View class="fixedHeader">
				<Label class="titleFixed">Seu Projeto</Label>
			</View>
			<View height="130" width="100%" layout="horizontal">
				<View layout="vertical" width="80" left="0">
					<ImageView image="/ooo.png" width="50" height="50" left="10" top="10"></ImageView>
					<Label class="labelMin" top="15" left="10">PREVISTO</Label>
					<Label class="labelMin" left="10" top="7">REALIZADO</Label>
				</View>
				
				<View layout="vertical" top="0" left="0" width="200">
					<Label top="0" left="0" class="titleProject" id="titulo_projeto">Titulo do projeto 2000</Label>
					<Label top="5" left="0" class="labelMin" >DEADLINE</Label>
					<Label left="0" class="labelMin2" id="deadline">0/00/0000</Label>
					
					<View width="220" backgroundColor="#F5F5F5" top="18" height="17" left="0" layout="vertical">
						<View width="0%" class="pPrevisto" height="15" top="0" left="0" id="sprevisto"></View>
						<Label color="#FFF" top="-16" font="{fontSize: 10}" id="previsto">0%</Label>
					</View>
					<View width="220" backgroundColor="#F5F5F5" top="4" height="17" left="0" layout="vertical">
						<View width="0%" class="pRealizado" height="15" left="0" top="0" id="srealizado"></View>
						<Label color="#FFF" top="-16" font="{fontSize: 10}" id="realizado">0%</Label>
					</View>					
				</View>
			</View>
			<View class="fixedHeader">
				<Label class="titleFixed">Descritivo</Label>
			</View>
			
			<Label id="descritivo" left="10" right="10" top="10"textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" class="text"></Label>
			
			<View class="fixedHeader" top="10"> 
				<Label class="titleFixed">Coment√°rios</Label>
			</View>
			<View id="comentario" layout="vertical" />
			
			<View backgroundColor="#eeeeee" left="0" right="0" top="20" height="200" layout="vertical">
				<View backgroundColor="#FFF" layout="vertical" top="10" left="10" right="10" height="130" bottom="10">
					<Label class="labelFields">Mensagem:  </Label><TextArea class="textArea" id="mensagem" left="11"></TextArea>
				</View>
				<Button class="buttonFields" id="enviar">Enviar</Button>
			</View>
		</ScrollView>
	</View>
</Alloy>